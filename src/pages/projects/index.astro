---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const title = 'Projects | Ahmed Adel';
const description =
  'Explore featured security research, personal builds, and open source contributions.';

const projects = await getCollection('projects');
const contributions = await getCollection('contributions');

const securityKeywords = [
  'security',
  'appsec',
  'vulnerability',
  'vuln',
  'threat',
  'audit',
  'owasp',
  'hardening',
  'defense',
  'cve',
];

const isSecurityProject = (project) => {
  const haystack = [
    project.data.title,
    project.data.description,
    ...project.data.techStack,
  ]
    .join(' ')
    .toLowerCase();
  return securityKeywords.some((keyword) => haystack.includes(keyword));
};

const projectItems = projects.map((project) => {
  const categoryValue = isSecurityProject(project) ? 'security' : 'personal';
  const links = [
    ...(project.data.demo
      ? [{ label: 'Live Demo', href: project.data.demo, kind: 'demo' }]
      : []),
    ...(project.data.github
      ? [{ label: 'GitHub', href: project.data.github, kind: 'github' }]
      : []),
  ];

  if (links.length === 0) {
    links.push({
      label: 'Contact',
      href: 'mailto:contact@ahmedalderai.com',
      kind: 'contact',
    });
  }

  return {
    id: project.slug,
    title: project.data.title,
    description: project.data.description,
    techStack: project.data.techStack,
    image: project.data.heroImage,
    category: categoryValue,
    categoryLabel: categoryValue === 'security' ? 'Security' : 'Personal',
    featured: project.data.featured,
    date: project.data.pubDate ? project.data.pubDate.valueOf() : 0,
    links,
    kind: 'project',
  };
});

const contributionItems = contributions.map((contribution) => ({
  id: contribution.id ?? contribution.slug,
  title: contribution.data.project,
  description:
    contribution.data.impact ||
    contribution.data.description ||
    'Open source contribution.',
  techStack: ['Open Source', contribution.data.type, contribution.data.status],
  image: undefined,
  category: 'oss',
  categoryLabel: 'OSS Contributions',
  featured: false,
  date: contribution.data.date ? contribution.data.date.valueOf() : 0,
  links: [
    {
      label: contribution.data.type === 'PR' ? 'View PR' : 'View Contribution',
      href: contribution.data.pr_url,
      kind: 'contribution',
    },
  ],
  kind: 'contribution',
}));

const allItems = [...projectItems, ...contributionItems].sort(
  (a, b) => b.date - a.date
);

const featuredProjects = projectItems
  .filter((item) => item.featured)
  .sort((a, b) => b.date - a.date);

const gridItems = allItems.filter((item) => !item.featured);

const techTags = Array.from(
  new Set(projectItems.flatMap((item) => item.techStack))
).sort((a, b) => a.localeCompare(b));

const categories = [
  { label: 'All', value: 'all' },
  { label: 'OSS Contributions', value: 'oss' },
  { label: 'Personal', value: 'personal' },
  { label: 'Security', value: 'security' },
];

const formatDate = (value) => {
  if (!value) return '';
  return new Date(value).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
  });
};
---

<BaseLayout title={title} description={description}>
  <!-- Hero -->
  <section class="relative overflow-hidden bg-gray-50 pb-16 pt-28 dark:bg-black/50">
    <div class="absolute inset-0 pointer-events-none">
      <div class="absolute -right-24 -top-24 h-72 w-72 rounded-full bg-emerald-500/10 blur-3xl"></div>
      <div class="absolute -bottom-24 -left-24 h-72 w-72 rounded-full bg-cyan-500/10 blur-3xl"></div>
    </div>
    <div class="relative mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <p class="text-sm font-semibold uppercase tracking-[0.2em] text-emerald-600 dark:text-emerald-400">
          Portfolio
        </p>
        <h1 class="mt-4 text-4xl font-bold text-gray-900 dark:text-white md:text-5xl">
          Projects & Open Source Impact
        </h1>
        <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
          A curated view of my security research, personal builds, and meaningful
          contributions to open source infrastructure.
        </p>
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="bg-white py-16 dark:bg-background">
      <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
          <div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
              Featured Projects
            </h2>
            <p class="mt-2 text-gray-600 dark:text-gray-400">
              Highlighted work that represents my most impactful security and
              research efforts.
            </p>
          </div>
        </div>

        <div class="mt-10 grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
          {featuredProjects.map((project) => (
            <article class="group relative flex h-full flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:border-gray-700 dark:bg-gray-900/60">
              {project.image && (
                <div class="aspect-video w-full overflow-hidden bg-gray-100 dark:bg-gray-900">
                  <img
                    src={project.image}
                    alt={`Screenshot of ${project.title}`}
                    class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    loading="lazy"
                  />
                </div>
              )}
              <div class="flex flex-1 flex-col p-6">
                <div class="mb-3 flex items-start justify-between gap-3">
                  <h3 class="text-lg font-semibold text-gray-900 transition-colors group-hover:text-emerald-600 dark:text-white dark:group-hover:text-emerald-400">
                    {project.title}
                  </h3>
                  <span class="inline-flex items-center rounded-full bg-emerald-100 px-2.5 py-1 text-xs font-semibold text-emerald-700 dark:bg-emerald-900/40 dark:text-emerald-300">
                    Featured
                  </span>
                </div>
                <p class="mb-4 text-sm leading-relaxed text-gray-600 dark:text-gray-300">
                  {project.description}
                </p>
                <div class="mb-4 flex flex-wrap gap-2" role="list">
                  {project.techStack.map((tech) => (
                    <span
                      role="listitem"
                      class="inline-flex items-center rounded-md bg-gray-100 px-2.5 py-1 text-xs font-medium text-gray-700 dark:bg-gray-800 dark:text-gray-300"
                    >
                      {tech}
                    </span>
                  ))}
                </div>
                <div class="mt-auto flex flex-wrap gap-3 border-t border-gray-100 pt-4 dark:border-gray-700">
                  {project.links.map((link) => (
                    <a
                      href={link.href}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="inline-flex items-center gap-1.5 text-sm font-medium text-emerald-600 transition-colors hover:text-emerald-700 dark:text-emerald-400 dark:hover:text-emerald-300"
                    >
                      {link.label}
                      <svg
                        class="h-4 w-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        aria-hidden="true"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                        />
                      </svg>
                    </a>
                  ))}
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}

  <!-- Filter + Grid -->
  <section class="bg-gray-50 py-16 dark:bg-black/50">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col gap-4 md:flex-row md:items-end md:justify-between">
        <div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white">
            All Projects
          </h2>
          <p class="mt-2 text-gray-600 dark:text-gray-400">
            Filter by category and technology to explore the full archive.
          </p>
        </div>
        <button
          type="button"
          id="clear-filters"
          class="inline-flex items-center justify-center rounded-full border border-gray-200 bg-white px-4 py-2 text-sm font-medium text-gray-700 transition-colors hover:border-emerald-200 hover:text-emerald-600 dark:border-gray-700 dark:bg-gray-900 dark:text-gray-300 dark:hover:text-emerald-300"
        >
          Clear filters
        </button>
      </div>

      <div class="mt-10 grid gap-8 lg:grid-cols-[minmax(0,1fr)_minmax(0,2fr)]">
        <aside class="space-y-8">
          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">
              Category
            </h3>
            <div
              class="mt-3 flex flex-wrap gap-2"
              role="group"
              aria-label="Filter by category"
            >
              {categories.map((category) => (
                <button
                  type="button"
                  class="filter-button"
                  data-filter="category"
                  data-category={category.value}
                  aria-pressed={category.value === 'all' ? 'true' : 'false'}
                >
                  {category.label}
                </button>
              ))}
            </div>
          </div>

          <div>
            <h3 class="text-sm font-semibold uppercase tracking-wide text-gray-500 dark:text-gray-400">
              Technology
            </h3>
            <div
              class="mt-3 flex flex-wrap gap-2"
              role="group"
              aria-label="Filter by technology"
            >
              {techTags.map((tag) => (
                <button
                  type="button"
                  class="tag-button"
                  data-filter="tag"
                  data-tag={tag.toLowerCase()}
                  aria-pressed="false"
                >
                  {tag}
                </button>
              ))}
            </div>
          </div>

          <p
            id="active-filters"
            class="text-sm text-gray-500 dark:text-gray-400"
            aria-live="polite"
          >
            Showing all projects.
          </p>
        </aside>

        <div>
          <div
            id="projects-grid"
            class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3"
          >
            {gridItems.map((item) => (
              <article
                class="project-card group relative flex h-full flex-col overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:border-gray-700 dark:bg-gray-900/60"
                data-card
                data-category={item.category}
                data-tags={item.techStack.map((tag) => tag.toLowerCase()).join(',')}
              >
                {item.image && (
                  <div class="aspect-video w-full overflow-hidden bg-gray-100 dark:bg-gray-900">
                    <img
                      src={item.image}
                      alt={`Screenshot of ${item.title}`}
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                      loading="lazy"
                    />
                  </div>
                )}

                <div class="flex flex-1 flex-col p-6">
                  <div class="mb-3 flex items-start justify-between gap-3">
                    <h3 class="text-lg font-semibold text-gray-900 transition-colors group-hover:text-emerald-600 dark:text-white dark:group-hover:text-emerald-400">
                      {item.title}
                    </h3>
                    <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-1 text-xs font-semibold text-gray-600 dark:bg-gray-800 dark:text-gray-300">
                      {item.categoryLabel}
                    </span>
                  </div>

                  {item.date > 0 && (
                    <p class="mb-2 text-xs uppercase tracking-wide text-gray-400 dark:text-gray-500">
                      {formatDate(item.date)}
                    </p>
                  )}

                  <p class="mb-4 text-sm leading-relaxed text-gray-600 dark:text-gray-300">
                    {item.description}
                  </p>

                  <div class="mb-4 flex flex-wrap gap-2" role="list">
                    {item.techStack.map((tech) => (
                      <span
                        role="listitem"
                        class="inline-flex items-center rounded-md bg-gray-100 px-2.5 py-1 text-xs font-medium text-gray-700 dark:bg-gray-800 dark:text-gray-300"
                      >
                        {tech}
                      </span>
                    ))}
                  </div>

                  <div class="mt-auto flex flex-wrap gap-3 border-t border-gray-100 pt-4 dark:border-gray-700">
                    {item.links.map((link) => (
                      <a
                        href={link.href}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-1.5 text-sm font-medium text-emerald-600 transition-colors hover:text-emerald-700 dark:text-emerald-400 dark:hover:text-emerald-300"
                      >
                        {link.label}
                        <svg
                          class="h-4 w-4"
                          fill="none"
                          stroke="currentColor"
                          viewBox="0 0 24 24"
                          aria-hidden="true"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
                          />
                        </svg>
                      </a>
                    ))}
                  </div>
                </div>
              </article>
            ))}
          </div>

          <div
            id="no-results"
            class="mt-12 hidden rounded-2xl border border-dashed border-gray-300 bg-white p-10 text-center text-gray-600 dark:border-gray-700 dark:bg-gray-900/60 dark:text-gray-300"
          >
            No projects match the selected filters. Try clearing or adjusting
            your selections.
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  const setupProjectFilters = () => {
    const categoryButtons = Array.from(
      document.querySelectorAll('[data-filter="category"]')
    );
    const tagButtons = Array.from(
      document.querySelectorAll('[data-filter="tag"]')
    );
    const cards = Array.from(document.querySelectorAll('[data-card]'));
    const clearButton = document.getElementById('clear-filters');
    const noResults = document.getElementById('no-results');
    const activeFilters = document.getElementById('active-filters');

    if (!cards.length) return;

    let activeCategory = 'all';
    const activeTags = new Set();

    const updateButtons = () => {
      categoryButtons.forEach((button) => {
        const isActive = button.dataset.category === activeCategory;
        button.setAttribute('aria-pressed', isActive ? 'true' : 'false');
      });

      tagButtons.forEach((button) => {
        const tag = button.dataset.tag;
        const isActive = activeTags.has(tag);
        button.setAttribute('aria-pressed', isActive ? 'true' : 'false');
      });
    };

    const updateStatusText = () => {
      if (!activeFilters) return;
      const categoryLabel =
        activeCategory === 'all'
          ? 'all categories'
          : activeCategory === 'oss'
          ? 'OSS Contributions'
          : `${activeCategory.charAt(0).toUpperCase()}${activeCategory.slice(1)}`;
      const tags = Array.from(activeTags);
      if (tags.length === 0) {
        activeFilters.textContent = `Showing ${categoryLabel}.`;
      } else {
        activeFilters.textContent = `Showing ${categoryLabel} tagged with ${tags.join(
          ', '
        )}.`;
      }
    };

    const applyFilters = () => {
      let visibleCount = 0;

      cards.forEach((card) => {
        const category = card.dataset.category;
        const tags = (card.dataset.tags || '').split(',').filter(Boolean);
        const matchesCategory =
          activeCategory === 'all' || category === activeCategory;
        const matchesTags =
          activeTags.size === 0 ||
          Array.from(activeTags).every((tag) => tags.includes(tag));

        const isVisible = matchesCategory && matchesTags;
        card.classList.toggle('hidden', !isVisible);
        if (isVisible) visibleCount += 1;
      });

      if (noResults) {
        noResults.classList.toggle('hidden', visibleCount > 0);
      }

      updateButtons();
      updateStatusText();
    };

    categoryButtons.forEach((button) => {
      button.addEventListener('click', () => {
        activeCategory = button.dataset.category || 'all';
        applyFilters();
      });
    });

    tagButtons.forEach((button) => {
      button.addEventListener('click', () => {
        const tag = button.dataset.tag;
        if (!tag) return;
        if (activeTags.has(tag)) {
          activeTags.delete(tag);
        } else {
          activeTags.add(tag);
        }
        applyFilters();
      });
    });

    if (clearButton) {
      clearButton.addEventListener('click', () => {
        activeCategory = 'all';
        activeTags.clear();
        applyFilters();
      });
    }

    applyFilters();
  };

  document.addEventListener('astro:page-load', setupProjectFilters);
</script>

<style>
  .filter-button,
  .tag-button {
    border-radius: 9999px;
    border: 1px solid rgb(229, 231, 235);
    padding: 0.4rem 0.85rem;
    font-size: 0.85rem;
    font-weight: 500;
    color: rgb(55, 65, 81);
    background: white;
    min-height: 2.75rem;
    transition: all 0.2s ease;
  }

  .filter-button:hover,
  .tag-button:hover {
    border-color: rgba(16, 185, 129, 0.5);
    color: rgb(5, 150, 105);
  }

  .filter-button[aria-pressed='true'],
  .tag-button[aria-pressed='true'] {
    border-color: rgba(16, 185, 129, 0.6);
    background: rgba(16, 185, 129, 0.12);
    color: rgb(5, 150, 105);
  }

  :global(.dark) .filter-button,
  :global(.dark) .tag-button {
    border-color: rgba(55, 65, 81, 0.9);
    background: rgba(17, 24, 39, 0.6);
    color: rgb(209, 213, 219);
  }

  :global(.dark) .filter-button:hover,
  :global(.dark) .tag-button:hover {
    border-color: rgba(16, 185, 129, 0.6);
    color: rgb(110, 231, 183);
  }

  :global(.dark) .filter-button[aria-pressed='true'],
  :global(.dark) .tag-button[aria-pressed='true'] {
    border-color: rgba(16, 185, 129, 0.6);
    background: rgba(16, 185, 129, 0.18);
    color: rgb(167, 243, 208);
  }
</style>
