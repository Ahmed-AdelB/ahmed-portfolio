---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "About Ahmed Adel | AI Security Researcher & Open Source Contributor";
const description = "Ahmed Adel is an AI Security Researcher with 7 merged PRs to major projects including pip, pydantic, and openai-python. Computer Science graduate from Ain Shams University, Egypt.";

const skills = [
  { name: 'Python', icon: 'python', description: 'Primary language for security tooling' },
  { name: 'TypeScript', icon: 'typescript', description: 'Full-stack development' },
  { name: 'AI Security', icon: 'shield', description: 'LLM & ML system hardening' },
  { name: 'Open Source', icon: 'git-pull-request', description: '7+ merged PRs to major projects' },
  { name: 'AppSec', icon: 'lock', description: 'Application security auditing' },
  { name: 'DevSecOps', icon: 'terminal', description: 'Security automation pipelines' },
];

const ossContributions = [
  {
    project: "pip",
    description: "The package installer for Python, used by millions of developers worldwide",
    contribution: "Security improvements and code hardening",
    impact: "Affects every Python developer globally",
    icon: "package"
  },
  {
    project: "pydantic",
    description: "Data validation library powering FastAPI and modern Python",
    contribution: "Validation logic enhancements and edge case fixes",
    impact: "Used in production by thousands of companies",
    icon: "check-circle"
  },
  {
    project: "openai-python",
    description: "Official Python library for the OpenAI API",
    contribution: "Security hardening for AI integrations",
    impact: "Protects AI applications at scale",
    icon: "cpu"
  },
  {
    project: "OWASP",
    description: "The Open Web Application Security Project",
    contribution: "Security best practices and documentation",
    impact: "Industry-standard security guidance",
    icon: "shield-check"
  }
];

const experience = [
  {
    role: "AI Security Researcher",
    company: "Independent / Open Source",
    period: "Present",
    description: "Leading research on securing AI infrastructure. Authoring the llm-security-playbook, a comprehensive guide to LLM security. Identifying and responsibly disclosing vulnerabilities in AI tooling."
  },
  {
    role: "Open Source Contributor",
    company: "pip, pydantic, openai-python, OWASP",
    period: "Ongoing",
    description: "7 merged PRs to foundational Python ecosystem projects. Focus on security hardening, input validation, and supply chain protection. Every contribution strengthens the foundation that millions of developers rely on."
  },
  {
    role: "Security Community Member",
    company: "OWASP",
    period: "Ongoing",
    description: "Active contributor to OWASP initiatives focused on AI/ML security. Participating in the development of security standards for the next generation of applications."
  }
];

const education = [
  {
    degree: "Bachelor of Science in Computer Science",
    school: "Ain Shams University",
    location: "Cairo, Egypt",
    year: "Graduated",
    description: "Specialized in Software Engineering and Systems Security. Built a strong foundation in algorithms, systems design, and security principles that now drives my research in AI security."
  }
];

const values = [
  {
    title: "Security by Default",
    description: "Every line of code is an opportunity to make systems more secure. I believe security should be woven into the fabric of development, not bolted on as an afterthought.",
    icon: "shield"
  },
  {
    title: "Open Source First",
    description: "The tools we build on should be transparent, auditable, and community-driven. I contribute upstream because a rising tide lifts all boats.",
    icon: "code"
  },
  {
    title: "Responsible Disclosure",
    description: "Finding vulnerabilities comes with the responsibility to report them ethically. I work with maintainers to fix issues before they can be exploited.",
    icon: "eye"
  }
];

const interests = [
  "AI Safety Research",
  "LLM Security",
  "Supply Chain Security",
  "Open Source Sustainability",
  "Capture The Flag (CTF)",
  "Tech Community Building",
  "Security Mentoring",
  "Python Ecosystem"
];
---

<BaseLayout title={title} description={description}>

  <!-- Hero Section with Hook -->
  <section class="relative pt-32 pb-24 overflow-hidden bg-gray-50 dark:bg-black/50">
    <!-- Background Decor -->
    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-cyan-500/5 rounded-full blur-3xl pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Photo Placeholder -->
        <div class="w-48 h-48 md:w-72 md:h-72 flex-shrink-0 relative">
          <div class="absolute inset-0 bg-gradient-to-tr from-emerald-500 to-cyan-500 rounded-full blur-xl opacity-40 animate-pulse"></div>
          <div class="relative w-full h-full rounded-full bg-gradient-to-br from-slate-800 to-slate-900 border-4 border-white dark:border-slate-700 overflow-hidden flex items-center justify-center shadow-2xl">
             <span class="text-5xl md:text-7xl font-bold bg-gradient-to-r from-emerald-400 to-cyan-400 bg-clip-text text-transparent">AA</span>
          </div>
        </div>

        <!-- Hero Content -->
        <div class="text-center md:text-start max-w-2xl">
          <!-- Hook -->
          <p class="text-emerald-600 dark:text-emerald-400 font-mono text-sm md:text-base mb-4 tracking-wider">
            // SECURING AI, ONE COMMIT AT A TIME
          </p>

          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6 leading-tight">
            Making the <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-500 to-cyan-500">AI Ecosystem</span> Safer
          </h1>

          <p class="text-xl text-gray-600 dark:text-gray-300 leading-relaxed mb-8">
            I'm Ahmed Adel, an AI Security Researcher with <strong class="text-emerald-600 dark:text-emerald-400">7 merged PRs</strong> to major open source projects.
            I find vulnerabilities in the tools that power modern AI so developers can build with confidence.
          </p>

          <!-- Quick Stats -->
          <div class="flex flex-wrap justify-center md:justify-start gap-6 text-sm">
            <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
              <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span><strong class="text-gray-900 dark:text-white">7+</strong> Merged PRs</span>
            </div>
            <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
              <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
              </svg>
              <span><strong class="text-gray-900 dark:text-white">AI Security</strong> Researcher</span>
            </div>
            <div class="flex items-center gap-2 text-gray-600 dark:text-gray-300">
              <svg class="w-5 h-5 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
              </svg>
              <span><strong class="text-gray-900 dark:text-white">Ain Shams</strong> University</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Mission Statement -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50 dark:from-background dark:to-gray-900/30">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-gray-900 dark:text-white">
          My Mission
        </h2>
        <div class="w-24 h-1 bg-gradient-to-r from-emerald-500 to-cyan-500 mx-auto rounded-full"></div>
      </div>

      <blockquote class="relative">
        <div class="absolute -top-4 -start-4 text-6xl text-emerald-500/20 font-serif">"</div>
        <p class="text-xl md:text-2xl text-gray-700 dark:text-gray-200 leading-relaxed text-center italic relative z-10">
          As AI systems become the backbone of modern software, their security becomes everyone's responsibility.
          I dedicate my work to finding and fixing vulnerabilities in AI infrastructure
          before they become headlines.
        </p>
        <div class="absolute -bottom-4 -end-4 text-6xl text-emerald-500/20 font-serif rotate-180">"</div>
      </blockquote>
    </div>
  </section>

  <!-- Bio / About Narrative -->
  <section class="py-20 bg-white dark:bg-background">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
        <span class="w-2 h-8 bg-emerald-500 rounded-full"></span>
        The Story So Far
      </h2>
      <div class="prose prose-lg dark:prose-invert text-gray-600 dark:text-gray-300 max-w-none">
        <p class="text-xl leading-relaxed mb-6">
          My path into security started the way most do: by breaking things. As a Computer Science student at
          <strong>Ain Shams University in Cairo, Egypt</strong>, I found myself drawn not to building applications,
          but to understanding how they fail. That curiosity evolved into a focused mission.
        </p>

        <p class="mb-6">
          Today, I work at the frontier of <strong>AI security research</strong>. While the world rushes to deploy
          large language models and AI agents, I'm in the trenches asking harder questions:
          <em>What happens when these systems are attacked? How do we protect the supply chain that feeds them?
          What vulnerabilities are hiding in the libraries we trust?</em>
        </p>

        <p class="mb-6">
          The answers led me to open source. I've contributed security improvements to foundational projects like
          <strong>pip</strong> (the Python package installer), <strong>pydantic</strong> (data validation for modern Python),
          <strong>openai-python</strong> (the official OpenAI SDK), and <strong>OWASP</strong> security standards.
          Each merged PR represents not just code, but a small step toward a more secure ecosystem.
        </p>

        <p class="mb-6">
          My flagship project, the <strong class="text-emerald-600 dark:text-emerald-400">llm-security-playbook</strong>,
          distills everything I've learned into an actionable guide for securing LLM applications. It's used by
          developers and security teams who understand that AI security isn't optionalâ€”it's existential.
        </p>

        <p>
          When I'm not hunting vulnerabilities or reviewing PRs, I'm active in the <strong>OWASP community</strong>,
          contributing to security standards and sharing knowledge with fellow researchers. I believe the best
          security work happens in the open, where it can be scrutinized, improved, and shared.
        </p>
      </div>
    </div>
  </section>

  <!-- Open Source Philosophy -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-white">
          Open Source Philosophy
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Code speaks louder than credentials. Here's what drives my contributions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {values.map((value) => (
          <div class="bg-white dark:bg-gray-800 p-8 rounded-2xl shadow-sm border border-gray-100 dark:border-gray-700 hover:shadow-lg transition-all duration-300 hover:-translate-y-1">
            <div class="w-14 h-14 mb-6 rounded-xl bg-gradient-to-br from-emerald-500 to-cyan-500 flex items-center justify-center text-white">
              {value.icon === 'shield' && (
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              )}
              {value.icon === 'code' && (
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
                </svg>
              )}
              {value.icon === 'eye' && (
                <svg class="w-7 h-7" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                </svg>
              )}
            </div>
            <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">{value.title}</h3>
            <p class="text-gray-600 dark:text-gray-300 leading-relaxed">{value.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- OSS Contributions Showcase -->
  <section class="py-20 bg-white dark:bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-white">
          Projects I've Contributed To
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          7 merged pull requests to foundational open source projects used by millions.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6">
        {ossContributions.map((contrib) => (
          <div class="group relative bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900 p-6 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-emerald-500/50 transition-all duration-300 hover:shadow-xl hover:shadow-emerald-500/5">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600 dark:text-emerald-400 flex-shrink-0 group-hover:scale-110 transition-transform">
                {contrib.icon === 'package' && (
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
                  </svg>
                )}
                {contrib.icon === 'check-circle' && (
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                )}
                {contrib.icon === 'cpu' && (
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
                  </svg>
                )}
                {contrib.icon === 'shield-check' && (
                  <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{contrib.project}</h3>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">{contrib.description}</p>
                <div class="space-y-2">
                  <p class="text-sm text-gray-600 dark:text-gray-300">
                    <span class="font-medium text-emerald-600 dark:text-emerald-400">Contribution:</span> {contrib.contribution}
                  </p>
                  <p class="text-sm text-gray-600 dark:text-gray-300">
                    <span class="font-medium text-emerald-600 dark:text-emerald-400">Impact:</span> {contrib.impact}
                  </p>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Skills Grid -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-white">Technical Arsenal</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {skills.map((skill) => (
          <div class="group flex flex-col items-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 dark:border-gray-700 hover:-translate-y-1 hover:border-emerald-500/50">
            <div class="w-12 h-12 mb-4 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600 dark:text-emerald-400 group-hover:scale-110 transition-transform">
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 {skill.icon === 'python' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
                 {skill.icon === 'typescript' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
                 {skill.icon === 'shield' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />}
                 {skill.icon === 'git-pull-request' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />}
                 {skill.icon === 'lock' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />}
                 {skill.icon === 'terminal' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3" />}
              </svg>
            </div>
            <span class="font-medium text-gray-900 dark:text-white text-center">{skill.name}</span>
            <span class="text-xs text-gray-500 dark:text-gray-400 text-center mt-1 opacity-0 group-hover:opacity-100 transition-opacity">{skill.description}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience & Education Split -->
  <section class="py-20 bg-white dark:bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-16">

        <!-- Experience -->
        <div>
          <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
            <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Experience
          </h2>
          <div class="space-y-8 border-s-2 border-gray-200 dark:border-gray-700 ms-3 ps-8 relative">
            {experience.map((job) => (
              <div class="relative">
                <span class="absolute -start-[41px] top-1 w-5 h-5 rounded-full border-4 border-white dark:border-gray-900 bg-emerald-500"></span>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">{job.role}</h3>
                <p class="text-emerald-600 dark:text-emerald-400 font-medium mb-1">{job.company}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">{job.period}</p>
                <p class="text-gray-600 dark:text-gray-300">{job.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Education & Interests -->
        <div class="space-y-16">
          <!-- Education -->
          <div>
            <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
              <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
              </svg>
              Education
            </h2>
            <div class="space-y-6">
              {education.map((edu) => (
                <div class="bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-900 p-6 rounded-xl border border-gray-100 dark:border-gray-700">
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white">{edu.degree}</h3>
                  <p class="text-emerald-600 dark:text-emerald-400">{edu.school}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{edu.location} | {edu.year}</p>
