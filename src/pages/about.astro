---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = "About Ahmed Adel | AI Security Researcher";
const description = "Learn more about Ahmed Adel, his background in Computer Science, and his work in AI Security and Open Source.";

const skills = [
  { name: 'Python', icon: 'python' },
  { name: 'AI Security', icon: 'shield' },
  { name: 'Open Source', icon: 'git-pull-request' },
  { name: 'AppSec', icon: 'lock' },
  { name: 'DevSecOps', icon: 'terminal' },
  { name: 'Auditing', icon: 'search' },
];

const experience = [
  {
    role: "AI Security Researcher",
    company: "Independent / Open Source",
    period: "Present",
    description: "Leading research on securing AI infrastructure. Authoring the llm-security-playbook and contributing security patches to major Python ecosystem projects."
  },
  {
    role: "Open Source Contributor",
    company: "Various Projects",
    period: "Ongoing",
    description: "Active contributor to core infrastructure projects including pip, pydantic, and openai-python. Focusing on security hardening and performance improvements."
  },
  {
    role: "Community Member",
    company: "OWASP",
    period: "Ongoing",
    description: "Contributing to OWASP initiatives and best practices for securing modern applications."
  }
];

const education = [
  {
    degree: "Bachelor of Computer Science",
    school: "Ain Shams University, Egypt",
    year: "Graduated", 
    description: "Focus on Software Engineering and Systems Security."
  }
];

const interests = [
  "AI Safety Research",
  "Open Source Sustainability",
  "Capture The Flag (CTF) Competitions",
  "Tech Community Building",
  "Mentoring"
];
---

<BaseLayout title={title} description={description}>
  
  <!-- Hero Section -->
  <section class="relative pt-32 pb-20 overflow-hidden bg-gray-50 dark:bg-black/50">
    <!-- Background Decor -->
    <div class="absolute top-0 right-0 -translate-y-1/2 translate-x-1/2 w-96 h-96 bg-emerald-500/10 rounded-full blur-3xl pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 translate-y-1/2 -translate-x-1/2 w-96 h-96 bg-blue-500/10 rounded-full blur-3xl pointer-events-none"></div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Photo Placeholder -->
        <div class="w-48 h-48 md:w-64 md:h-64 flex-shrink-0 relative">
          <div class="absolute inset-0 bg-gradient-to-tr from-emerald-500 to-cyan-500 rounded-full blur-lg opacity-50 animate-pulse"></div>
          <div class="relative w-full h-full rounded-full bg-slate-800 border-4 border-white dark:border-slate-700 overflow-hidden flex items-center justify-center shadow-xl">
             <!-- Placeholder Content -->
             <span class="text-4xl md:text-6xl font-bold text-slate-600 dark:text-slate-400">AA</span>
          </div>
        </div>

        <!-- Intro Text -->
        <div class="text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
            Securing the <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-500 to-cyan-500">Future of AI</span>
          </h1>
          <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl leading-relaxed">
            I'm Ahmed Adel, a Computer Science graduate from Ain Shams University and an AI Security Researcher dedicated to making the open-source ecosystem safer for everyone.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- About Narrative -->
  <section class="py-20 bg-white dark:bg-background">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
        <span class="w-2 h-8 bg-emerald-500 rounded-full"></span>
        About Me
      </h2>
      <div class="prose prose-lg dark:prose-invert text-gray-600 dark:text-gray-300">
        <p class="mb-6">
          My journey into technology started with a curiosity about how things break, which naturally led me to security. Currently, I focus on the intersection of <strong>Artificial Intelligence</strong> and <strong>Cybersecurity</strong>, identifying vulnerabilities in the tools and frameworks that power the next generation of software.
        </p>
        <p class="mb-6">
          I believe that security shouldn't be an afterthought. By contributing to foundational open-source projects like <strong>pip</strong>, <strong>pydantic</strong>, and <strong>openai-python</strong>, I aim to harden the supply chain and ensure that developers can build with confidence.
        </p>
        <p>
          When I'm not auditing code or writing playbooks like the <em>llm-security-playbook</em>, I'm actively involved in the OWASP community, sharing knowledge and learning from fellow researchers.
        </p>
      </div>
    </div>
  </section>

  <!-- Skills Grid -->
  <section class="py-20 bg-gray-50 dark:bg-gray-900/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold mb-12 text-center text-gray-900 dark:text-white">Technical Arsenal</h2>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-6">
        {skills.map((skill) => (
          <div class="flex flex-col items-center p-6 bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 dark:border-gray-700 hover:-translate-y-1">
            <div class="w-12 h-12 mb-4 rounded-full bg-emerald-100 dark:bg-emerald-900/30 flex items-center justify-center text-emerald-600 dark:text-emerald-400">
              <!-- Simple Icon Placeholder based on name -->
              <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                 {skill.icon === 'python' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />}
                 {skill.icon === 'shield' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />}
                 {skill.icon === 'git-pull-request' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2h-2M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />}
                 {skill.icon === 'lock' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />}
                 {skill.icon === 'terminal' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 9l3 3-3 3m5 0h3" />}
                 {skill.icon === 'search' && <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />}
              </svg>
            </div>
            <span class="font-medium text-gray-900 dark:text-white">{skill.name}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Experience & Education Split -->
  <section class="py-20 bg-white dark:bg-background">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-16">
        
        <!-- Experience -->
        <div>
          <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
            <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Experience
          </h2>
          <div class="space-y-8 border-l-2 border-gray-200 dark:border-gray-700 ml-3 pl-8 relative">
            {experience.map((job) => (
              <div class="relative">
                <span class="absolute -left-[41px] top-1 w-5 h-5 rounded-full border-4 border-white dark:border-gray-900 bg-emerald-500"></span>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white">{job.role}</h3>
                <p class="text-emerald-600 dark:text-emerald-400 font-medium mb-1">{job.company}</p>
                <p class="text-sm text-gray-500 dark:text-gray-400 mb-3">{job.period}</p>
                <p class="text-gray-600 dark:text-gray-300">{job.description}</p>
              </div>
            ))}
          </div>
        </div>

        <!-- Education & Interests -->
        <div class="space-y-16">
          <!-- Education -->
          <div>
            <h2 class="text-2xl font-bold mb-8 text-gray-900 dark:text-white flex items-center gap-3">
              <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
              </svg>
              Education
            </h2>
            <div class="space-y-6">
              {education.map((edu) => (
                <div class="bg-gray-50 dark:bg-gray-800 p-6 rounded-xl border border-gray-100 dark:border-gray-700">
                  <h3 class="text-lg font-bold text-gray-900 dark:text-white">{edu.degree}</h3>
                  <p class="text-emerald-600 dark:text-emerald-400">{edu.school}</p>
                  <p class="text-sm text-gray-500 dark:text-gray-400 mt-1">{edu.year}</p>
                  <p class="text-gray-600 dark:text-gray-300 mt-3">{edu.description}</p>
                </div>
              ))}
            </div>
          </div>

          <!-- Interests -->
          <div>
            <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white flex items-center gap-3">
              <svg class="w-6 h-6 text-emerald-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
              Interests
            </h2>
            <div class="flex flex-wrap gap-3">
              {interests.map((interest) => (
                <span class="px-4 py-2 rounded-full bg-emerald-50 dark:bg-emerald-900/20 text-emerald-700 dark:text-emerald-300 text-sm font-medium border border-emerald-100 dark:border-emerald-800/50">
                  {interest}
                </span>
              ))}
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-24 bg-gradient-to-br from-slate-900 to-black text-white relative overflow-hidden">
    <div class="absolute inset-0 bg-[url('/grid.svg')] bg-center [mask-image:linear-gradient(180deg,white,rgba(255,255,255,0))]"></div>
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h2 class="text-3xl md:text-5xl font-bold mb-6">Let's Work Together</h2>
      <p class="text-xl text-gray-400 mb-10 max-w-2xl mx-auto">
        Interested in collaborating on AI security or open source projects? I'd love to hear from you.
      </p>
      <a
        href="mailto:contact@ahmedadel.dev"
        class="inline-flex items-center justify-center gap-2 px-8 py-4 text-lg font-bold text-white bg-emerald-600 hover:bg-emerald-500 rounded-xl transition-all duration-300 hover:scale-105 shadow-lg shadow-emerald-600/25"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
           <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        Send me an email
      </a>
    </div>
  </section>

</BaseLayout>