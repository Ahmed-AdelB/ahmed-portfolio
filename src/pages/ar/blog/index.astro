---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';

const title = 'المدونة | أحمد عادل';
const description = 'مقالات حول أمن الذكاء الاصطناعي، تطوير بايثون، والمصادر المفتوحة.';

const posts = await getCollection('blog');
posts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const formatDate = (date: Date) => {
  return new Date(date).toLocaleDateString('ar-EG', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<BaseLayout title={title} description={description} lang="ar">
  <div class="container mx-auto px-4 py-16 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <header class="mb-16 text-center">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-5xl mb-4">
          المدونة
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          أفكار وتجارب في الأمن السيبراني وهندسة البرمجيات.
        </p>
      </header>

      <div class="space-y-12">
        {posts.map((post) => (
          <article class="flex flex-col gap-8 md:flex-row">
            {post.data.heroImage && (
              <div class="md:w-1/3 shrink-0">
                <a href={`/blog/${post.slug}`} class="block overflow-hidden rounded-xl border border-gray-200 dark:border-gray-800 transition-transform hover:scale-[1.02]">
                  <img 
                    src={post.data.heroImage.src} 
                    alt={post.data.title}
                    class="h-48 w-full object-cover md:h-full"
                  />
                </a>
              </div>
            )}
            <div class="flex flex-col justify-center">
              <div class="mb-3 flex items-center gap-3 text-sm text-gray-500 dark:text-gray-400">
                <time datetime={post.data.pubDate.toISOString()}>
                  {formatDate(post.data.pubDate)}
                </time>
                {post.data.tags && (
                  <div class="flex gap-2">
                    {post.data.tags.map(tag => (
                      <span class="rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-medium text-gray-600 dark:bg-gray-800 dark:text-gray-300">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <h2 class="mb-3 text-2xl font-bold text-gray-900 dark:text-white">
                <a href={`/blog/${post.slug}`} class="hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors">
                  {post.data.title}
                </a>
              </h2>
              <p class="mb-4 text-gray-600 dark:text-gray-300 line-clamp-3">
                {post.data.description}
              </p>
              <a 
                href={`/blog/${post.slug}`}
                class="inline-flex items-center gap-2 text-sm font-medium text-emerald-600 hover:text-emerald-700 dark:text-emerald-400 dark:hover:text-emerald-300"
              >
                اقرأ المزيد
                <svg class="h-4 w-4 rotate-180" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>
