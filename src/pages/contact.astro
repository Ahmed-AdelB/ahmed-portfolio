---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/Footer.astro';
import { Github, Linkedin, Twitter, Mail, MapPin, Clock, Calendar } from 'lucide-react';
import { CalendlyEmbed } from '../components/features/CalendlyEmbed';

// Calendly configuration - Update this URL after setting up your Calendly account
const CALENDLY_URL = 'https://calendly.com/ahmedadel/coffee-chat';

const title = "Contact | Ahmed Adel";
const description = "Get in touch with Ahmed Adel for security audits, collaborations, or speaking engagements.";

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/Ahmed-AdelB',
    icon: Github,
    color: 'hover:text-gray-900 dark:hover:text-white'
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/ahmedadel1991',
    icon: Linkedin,
    color: 'hover:text-[#0077b5]'
  },
  {
    name: 'Email',
    url: 'mailto:ahmedalderai25@gmail.com',
    icon: Mail,
    color: 'hover:text-emerald-500'
  },
];

const faqs = [
  {
    question: "Are you available for freelance security audits?",
    answer: "Yes, I specialize in AI infrastructure security reviews and architecture audits. Please provide details about your stack and timeline in the message."
  },
  {
    question: "Do you accept speaking invitations?",
    answer: "I enjoy sharing knowledge about AI security and open source. If you're organizing a conference or meetup, feel free to reach out."
  },
  {
    question: "Can I use your open source tools commercially?",
    answer: "Most of my projects are under MIT or Apache 2.0 licenses, allowing commercial use. Please check the specific license in the repository."
  }
];
---

<BaseLayout title={title} description={description}>
  <Header />

  <main class="min-h-screen pt-20">
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-b from-gray-50 to-white dark:from-gray-900 dark:to-background overflow-hidden">
      <div class="absolute inset-0 overflow-hidden pointer-events-none" aria-hidden="true">
        <div class="absolute top-0 right-0 w-[500px] h-[500px] bg-emerald-500/5 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
        <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-blue-500/5 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>
      </div>

      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Let's <span class="text-transparent bg-clip-text bg-gradient-to-r from-emerald-500 to-cyan-500">Connect</span>
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Have a question about AI security, interested in collaborating, or just want to say hi? 
          I'm always open to discussing new opportunities.
        </p>
      </div>
    </section>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="grid lg:grid-cols-2 gap-16">
        
        <!-- Left Column: Contact Form -->
        <div class="bg-white dark:bg-gray-800 rounded-2xl p-8 shadow-sm border border-gray-100 dark:border-gray-700 h-fit">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">Send a Message</h2>

          <!--
            Email Destination Configuration:
            - Form submissions go to Formspree (https://formspree.io/f/xpwzgkdl)
            - Formspree forwards notifications to the account owner's email
            - For domain email setup (contact@ahmedaderai.dev), see: docs/EMAIL_SETUP.md
            - Direct email link uses: ahmedalderai25@gmail.com
          -->
          <form class="space-y-6" id="contact-form" action="https://formspree.io/f/xpwzgkdl" method="POST">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="space-y-2">
                <label for="name" class="text-sm font-medium text-gray-700 dark:text-gray-300">Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  autocomplete="name"
                  required
                  aria-required="true"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-900/50 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all outline-none"
                  placeholder="John Doe"
                />
              </div>
              <div class="space-y-2">
                <label for="email" class="text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  autocomplete="email"
                  required
                  aria-required="true"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-900/50 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all outline-none"
                  placeholder="john@example.com"
                />
              </div>
            </div>

            <div class="space-y-2">
              <label for="subject" class="text-sm font-medium text-gray-700 dark:text-gray-300">Subject</label>
              <div class="relative">
                <select
                  id="subject"
                  name="subject"
                  required
                  aria-required="true"
                  class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-900/50 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all outline-none appearance-none"
                >
                  <option value="" disabled selected>Select a topic...</option>
                  <option value="security">Security Audit Inquiry</option>
                  <option value="collaboration">Project Collaboration</option>
                  <option value="speaking">Speaking Engagement</option>
                  <option value="general">General Question</option>
                  <option value="other">Other</option>
                </select>
                <div class="absolute end-4 top-1/2 -translate-y-1/2 pointer-events-none text-gray-500">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                  </svg>
                </div>
              </div>
            </div>

            <div class="space-y-2">
              <label for="message" class="text-sm font-medium text-gray-700 dark:text-gray-300">Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                aria-required="true"
                class="w-full px-4 py-3 rounded-xl border border-gray-200 dark:border-gray-600 bg-gray-50 dark:bg-gray-900/50 text-gray-900 dark:text-white focus:ring-2 focus:ring-emerald-500 focus:border-transparent transition-all outline-none resize-y"
                placeholder="How can I help you?"
              ></textarea>
            </div>

            <input type="hidden" name="_subject" value="New Portfolio Contact" />
            <input type="text" name="_gotcha" style="display:none" tabindex="-1" autocomplete="off" />

            <button
              type="submit"
              class="w-full py-4 px-6 bg-gradient-to-r from-emerald-600 to-emerald-500 hover:from-emerald-500 hover:to-emerald-400 text-white font-bold rounded-xl shadow-lg shadow-emerald-500/20 hover:shadow-emerald-500/40 transform hover:-translate-y-0.5 transition-all duration-200"
            >
              Send Message
            </button>
          </form>

          <div id="form-success" class="hidden mt-4 p-4 bg-emerald-100 dark:bg-emerald-900/30 text-emerald-700 dark:text-emerald-300 rounded-xl">
            Thanks for your message! I'll get back to you soon.
          </div>
          <div id="form-error" class="hidden mt-4 p-4 bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 rounded-xl">
            Oops! Something went wrong. Please try again or email directly.
          </div>
        </div>

        <!-- Right Column: Info & Calendar -->
        <div class="space-y-8">
          
          <!-- Quick Info Cards -->
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700 shadow-sm">
              <div class="flex items-center gap-4 mb-3">
                <div class="p-3 bg-blue-100 dark:bg-blue-900/30 rounded-lg text-blue-600 dark:text-blue-400">
                  <MapPin className="w-6 h-6" />
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white">Location</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">Cairo, Egypt</p>
                </div>
              </div>
              <p class="text-xs text-gray-400 ms-16">GMT+2 / GMT+3 (DST)</p>
            </div>

            <div class="p-6 bg-white dark:bg-gray-800 rounded-xl border border-gray-100 dark:border-gray-700 shadow-sm">
              <div class="flex items-center gap-4 mb-3">
                <div class="p-3 bg-emerald-100 dark:bg-emerald-900/30 rounded-lg text-emerald-600 dark:text-emerald-400">
                  <Clock className="w-6 h-6" />
                </div>
                <div>
                  <h3 class="font-semibold text-gray-900 dark:text-white">Response Time</h3>
                  <p class="text-sm text-gray-500 dark:text-gray-400">24-48 Hours</p>
                </div>
              </div>
              <p class="text-xs text-gray-400 ms-16">Business Days</p>
            </div>
          </div>

          <!-- Social Links -->
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-100 dark:border-gray-700 shadow-sm">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Connect on Socials</h3>
            <div class="grid grid-cols-2 sm:grid-cols-4 gap-4">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  aria-label={link.name}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`flex flex-col items-center justify-center p-4 rounded-lg bg-gray-50 dark:bg-gray-900/50 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors group ${link.color}`}
                >
                  <link.icon className="w-6 h-6 mb-2 text-gray-500 dark:text-gray-400 group-hover:text-inherit transition-colors" />
                  <span class="text-sm font-medium text-gray-600 dark:text-gray-300 group-hover:text-inherit">{link.name}</span>
                </a>
              ))}
            </div>
          </div>

          <!-- Calendly Embed -->
          <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-100 dark:border-gray-700 shadow-sm overflow-hidden">
            <div class="flex items-center gap-3 mb-4">
              <Calendar className="w-5 h-5 text-emerald-500" />
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white">Schedule a Coffee Chat</h3>
            </div>
            <CalendlyEmbed
              client:load
              url={CALENDLY_URL}
              mode="inline"
              height={400}
              primaryColor="10b981"
            />
            <p class="text-xs text-center text-gray-400 mt-4">
              * Please ensure you have a specific agenda for the meeting.
            </p>
          </div>

          <!-- Quick Schedule Button -->
          <div class="bg-gradient-to-r from-emerald-500/10 to-cyan-500/10 dark:from-emerald-500/5 dark:to-cyan-500/5 rounded-xl p-6 border border-emerald-200 dark:border-emerald-800">
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-3">Prefer a Quick Popup?</h3>
            <p class="text-sm text-gray-600 dark:text-gray-300 mb-4">
              Click below to open the scheduler in a popup window.
            </p>
            <CalendlyEmbed
              client:load
              url={CALENDLY_URL}
              mode="popup"
              buttonText="Schedule a Coffee Chat"
            />
          </div>

        </div>
      </div>

      <!-- FAQ Section -->
      <section class="mt-24 max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-center text-gray-900 dark:text-white mb-12">Frequently Asked Questions</h2>
        <div class="space-y-6">
          {faqs.map((faq) => (
            <div class="bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-100 dark:border-gray-700 shadow-sm">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{faq.question}</h3>
              <p class="text-gray-600 dark:text-gray-300">{faq.answer}</p>
            </div>
          ))}
        </div>
      </section>
    </div>
  </main>

  <Footer lang="en" />

  <script>
    const form = document.getElementById('contact-form');
    const successMsg = document.getElementById('form-success');
    const errorMsg = document.getElementById('form-error');

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = form.querySelector('button[type="submit"]');
      const originalText = btn.textContent;
      btn.textContent = 'Sending...';
      btn.disabled = true;

      try {
        const response = await fetch(form.action, {
          method: 'POST',
          body: new FormData(form),
          headers: { 'Accept': 'application/json' }
        });
        if (response.ok) {
          form.reset();
          successMsg?.classList.remove('hidden');
          errorMsg?.classList.add('hidden');
        } else {
          throw new Error('Form submission failed');
        }
      } catch (error) {
        errorMsg?.classList.remove('hidden');
        successMsg?.classList.add('hidden');
      } finally {
        btn.textContent = originalText;
        btn.disabled = false;
      }
    });
  </script>
</BaseLayout>
