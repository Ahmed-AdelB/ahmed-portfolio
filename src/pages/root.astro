---
import BaseLayout from "../layouts/BaseLayout.astro";
import { MasterBadge } from "../components/features/MasterBadge";
import { AnalyticsDashboard } from "../components/features/AnalyticsDashboard";

const title = "root@ahmed-portfolio:~#";
const description = "Restricted Area. Authorized Access Only.";
---

<BaseLayout title={title} description={description}>
  <main class="container mx-auto px-4 py-20 min-h-screen flex flex-col items-center">
    <div class="w-full max-w-5xl space-y-12">
      <div class="max-w-2xl mx-auto space-y-8">
        <div class="text-center space-y-4">
          <h1 class="text-4xl md:text-6xl font-black font-mono tracking-tighter text-transparent bg-clip-text bg-gradient-to-r from-primary to-primary/50">
            /root
          </h1>
          <p class="text-xl font-mono text-muted-foreground">
            System Administration Interface
          </p>
        </div>

        <div class="grid gap-8">
          <div class="prose dark:prose-invert mx-auto text-center">
            <p>
              Welcome, admin. Security protocols are active.
              <br />
              Validate your credentials by verifying system flags.
            </p>
          </div>

          <MasterBadge client:only="react" />
        </div>
      </div>

      <AnalyticsDashboard client:only="react" />

      <div class="text-center text-xs font-mono text-muted-foreground/30">
        uid=0(root) gid=0(root) groups=0(root)
      </div>
    </div>
  </main>
</BaseLayout>
