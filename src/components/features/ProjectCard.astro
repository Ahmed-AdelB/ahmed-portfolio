---
interface Props {
  title: string;
  description: string;
  image?: string;
  techStack: string[];
  githubUrl?: string;
  demoUrl?: string;
  caseStudyUrl?: string;
  stars?: number;
}

const {
  title,
  description,
  image,
  techStack,
  githubUrl,
  demoUrl,
  caseStudyUrl,
  stars,
} = Astro.props;

// Tech stack color mapping for visual distinction
const getTechColor = (tech: string): string => {
  const techLower = tech.toLowerCase();
  const colorMap: Record<string, string> = {
    // Languages
    'python': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'typescript': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'javascript': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/40 dark:text-yellow-300',
    'rust': 'bg-orange-100 text-orange-800 dark:bg-orange-900/40 dark:text-orange-300',
    'go': 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900/40 dark:text-cyan-300',
    'java': 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-300',
    // Frameworks
    'react': 'bg-cyan-100 text-cyan-800 dark:bg-cyan-900/40 dark:text-cyan-300',
    'next.js': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
    'nextjs': 'bg-gray-100 text-gray-800 dark:bg-gray-700 dark:text-gray-200',
    'astro': 'bg-purple-100 text-purple-800 dark:bg-purple-900/40 dark:text-purple-300',
    'vue': 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/40 dark:text-emerald-300',
    'django': 'bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-300',
    'fastapi': 'bg-teal-100 text-teal-800 dark:bg-teal-900/40 dark:text-teal-300',
    // AI/ML
    'pytorch': 'bg-orange-100 text-orange-800 dark:bg-orange-900/40 dark:text-orange-300',
    'tensorflow': 'bg-orange-100 text-orange-800 dark:bg-orange-900/40 dark:text-orange-300',
    'langchain': 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/40 dark:text-emerald-300',
    'openai': 'bg-emerald-100 text-emerald-800 dark:bg-emerald-900/40 dark:text-emerald-300',
    'llm': 'bg-violet-100 text-violet-800 dark:bg-violet-900/40 dark:text-violet-300',
    'rag': 'bg-violet-100 text-violet-800 dark:bg-violet-900/40 dark:text-violet-300',
    // Databases
    'postgresql': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'postgres': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'mongodb': 'bg-green-100 text-green-800 dark:bg-green-900/40 dark:text-green-300',
    'redis': 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-300',
    'solr': 'bg-orange-100 text-orange-800 dark:bg-orange-900/40 dark:text-orange-300',
    'elasticsearch': 'bg-yellow-100 text-yellow-800 dark:bg-yellow-900/40 dark:text-yellow-300',
    // DevOps/Cloud
    'docker': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'kubernetes': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    'aws': 'bg-amber-100 text-amber-800 dark:bg-amber-900/40 dark:text-amber-300',
    'gcp': 'bg-blue-100 text-blue-800 dark:bg-blue-900/40 dark:text-blue-300',
    // Security
    'security': 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-300',
    'authentication': 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-300',
    'oauth': 'bg-red-100 text-red-800 dark:bg-red-900/40 dark:text-red-300',
  };

  // Check for partial matches
  for (const [key, value] of Object.entries(colorMap)) {
    if (techLower.includes(key)) return value;
  }

  // Default color
  return 'bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300';
};
---

<article
  class="group relative flex flex-col overflow-hidden rounded-xl border border-gray-200 bg-white shadow-sm transition-all duration-300 hover:-translate-y-1 hover:shadow-lg dark:border-gray-700 dark:bg-gray-800"
>
  <!-- Project Image -->
  {
    image && (
      <div class="aspect-video w-full overflow-hidden bg-gray-100 dark:bg-gray-900">
        <img
          src={image}
          alt={`Screenshot of ${title}`}
          class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
          loading="lazy"
        />
      </div>
    )
  }

  <!-- Content -->
  <div class="flex flex-1 flex-col p-5">
    <!-- Header with Title and Stars -->
    <header class="mb-3 flex items-start justify-between gap-3">
      <h3
        class="text-lg font-semibold text-gray-900 transition-colors group-hover:text-blue-600 dark:text-white dark:group-hover:text-blue-400"
      >
        {title}
      </h3>

      {
        stars !== undefined && stars > 0 && (
          <span class="inline-flex shrink-0 items-center gap-1 rounded-full bg-amber-100 px-2.5 py-0.5 text-sm font-medium text-amber-800 dark:bg-amber-900/30 dark:text-amber-400">
            <svg
              class="h-4 w-4"
              fill="currentColor"
              viewBox="0 0 20 20"
              aria-hidden="true"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
            </svg>
            <span>{stars.toLocaleString()}</span>
          </span>
        )
      }
    </header>

    <!-- Description -->
    <p class="mb-4 flex-1 text-sm leading-relaxed text-gray-600 dark:text-gray-300">
      {description}
    </p>

    <!-- Tech Stack Tags with Color Coding -->
    <div class="mb-4 flex flex-wrap gap-2" role="list" aria-label="Technologies used">
      {
        techStack.map((tech) => (
          <span
            role="listitem"
            class:list={[
              "inline-block rounded-md px-2.5 py-1 text-xs font-medium transition-colors",
              getTechColor(tech)
            ]}
          >
            {tech}
          </span>
        ))
      }
    </div>

    <!-- Links -->
    <footer class="mt-auto flex flex-wrap gap-3 border-t border-gray-100 pt-4 dark:border-gray-700">
      {
        demoUrl && (
          <a
            href={demoUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 text-sm font-medium text-blue-600 transition-colors hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300"
          >
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
              />
            </svg>
            Demo
          </a>
        )
      }

      {
        githubUrl && (
          <a
            href={githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-1.5 text-sm font-medium text-gray-700 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200"
          >
            <svg
              class="h-4 w-4"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                fill-rule="evenodd"
                d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                clip-rule="evenodd"
              />
            </svg>
            GitHub
          </a>
        )
      }

      {
        caseStudyUrl && (
          <a
            href={caseStudyUrl}
            class="inline-flex items-center gap-1.5 text-sm font-medium text-gray-700 transition-colors hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-200"
          >
            <svg
              class="h-4 w-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
              />
            </svg>
            Case Study
          </a>
        )
      }
    </footer>
  </div>
</article>
