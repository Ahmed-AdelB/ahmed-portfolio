---
import HeroStats from './HeroStats';

interface Props {
  className?: string;
}

const { className = '' } = Astro.props;

const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/aadel',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/in/ahmedaderai',
    icon: 'linkedin',
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/aadel',
    icon: 'twitter',
  },
  {
    name: 'Email',
    url: 'mailto:contact@ahmedadel.dev',
    icon: 'email',
  },
];
---

<section
  class:list={[
    'relative min-h-screen flex flex-col justify-center items-center px-4 sm:px-6 lg:px-8 overflow-hidden',
    className,
  ]}
  id="hero"
>
  <!-- Animated Background Gradient -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="hero-gradient-bg absolute inset-0"></div>
    <div class="hero-gradient-orb hero-gradient-orb-1"></div>
    <div class="hero-gradient-orb hero-gradient-orb-2"></div>
    <div class="hero-gradient-orb hero-gradient-orb-3"></div>
  </div>

  <!-- Main Content -->
  <div class="max-w-5xl mx-auto text-center z-10">
    <!-- Role Badge -->
    <div class="hero-reveal hero-reveal-1 mb-6">
      <span class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-slate-800/50 border border-slate-700/50 backdrop-blur-sm text-sm text-slate-300">
        <span class="w-2 h-2 rounded-full bg-emerald-400 animate-pulse"></span>
        AI Security Researcher & Open Source Contributor
      </span>
    </div>

    <!-- Name with Gradient -->
    <h1 class="hero-reveal hero-reveal-2 text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 tracking-tight">
      <span class="text-white">Hi, I'm </span>
      <span class="hero-name-gradient">Ahmed Adel Bakr Alderai</span>
    </h1>

    <!-- Tagline -->
    <p class="hero-reveal hero-reveal-3 text-xl sm:text-2xl md:text-3xl text-slate-300 mb-6 max-w-4xl mx-auto leading-relaxed">
      I secure the AI systems you deploy and improve the tools you use to build them.
    </p>

    <!-- Brief Intro -->
    <p class="hero-reveal hero-reveal-4 text-base sm:text-lg text-slate-400 mb-4 max-w-3xl mx-auto">
      Contributing to critical open-source infrastructure including
      <span class="text-emerald-400 font-medium">pip</span>,
      <span class="text-emerald-400 font-medium">pydantic</span>,
      <span class="text-emerald-400 font-medium">OWASP</span>, and
      <span class="text-emerald-400 font-medium">openai-python</span>.
    </p>

    <!-- Impact Stat -->
    <p class="hero-reveal hero-reveal-5 text-lg sm:text-xl font-semibold mb-8">
      <span class="hero-stat-gradient">150M+ combined monthly downloads</span>
    </p>

    <!-- CTA Buttons -->
    <div class="hero-reveal hero-reveal-6 flex flex-col sm:flex-row gap-4 justify-center mb-10">
      <a
        href="#contributions"
        class="group relative inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-white bg-gradient-to-r from-emerald-500 to-cyan-500 rounded-xl shadow-lg shadow-emerald-500/25 hover:shadow-emerald-500/40 transition-all duration-300 hover:scale-105"
      >
        <span>View Contributions</span>
        <svg class="w-5 h-5 transition-transform duration-300 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
      <a
        href="/resume.pdf"
        download
        class="group inline-flex items-center justify-center gap-2 px-8 py-4 text-base font-semibold text-slate-300 bg-slate-800/50 border border-slate-700/50 rounded-xl backdrop-blur-sm hover:bg-slate-700/50 hover:text-white transition-all duration-300 hover:scale-105"
      >
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <span>Download Resume</span>
      </a>
    </div>

    <!-- Social Links -->
    <div class="hero-reveal hero-reveal-7 flex justify-center gap-4 mb-12">
      {socialLinks.map((link) => (
        <a
          href={link.url}
          target={link.icon !== 'email' ? '_blank' : undefined}
          rel={link.icon !== 'email' ? 'noopener noreferrer' : undefined}
          class="group p-3 rounded-xl bg-slate-800/30 border border-slate-700/30 backdrop-blur-sm hover:bg-slate-700/50 hover:border-emerald-500/50 transition-all duration-300"
          aria-label={link.name}
        >
          {link.icon === 'github' && (
            <svg class="w-6 h-6 text-slate-400 group-hover:text-emerald-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          )}
          {link.icon === 'linkedin' && (
            <svg class="w-6 h-6 text-slate-400 group-hover:text-emerald-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          )}
          {link.icon === 'twitter' && (
            <svg class="w-6 h-6 text-slate-400 group-hover:text-emerald-400 transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          )}
          {link.icon === 'email' && (
            <svg class="w-6 h-6 text-slate-400 group-hover:text-emerald-400 transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          )}
        </a>
      ))}
    </div>

    <!-- GitHub Stats Strip -->
    <div class="hero-reveal hero-reveal-8">
      <HeroStats client:load />
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 scroll-indicator">
    <a href="#github-stats" class="flex flex-col items-center gap-2 text-slate-400 hover:text-emerald-400 transition-colors duration-300">
      <span class="text-sm font-medium">Scroll to explore</span>
      <div class="w-6 h-10 rounded-full border-2 border-current flex items-start justify-center p-1">
        <div class="w-1.5 h-3 bg-current rounded-full scroll-dot"></div>
      </div>
    </a>
  </div>
</section>

<style>
  /* Animated Background Gradient */
  .hero-gradient-bg {
    background: radial-gradient(ellipse at 50% 50%, rgba(16, 185, 129, 0.1) 0%, transparent 50%);
  }

  .hero-gradient-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
    animation: float 20s ease-in-out infinite;
  }

  .hero-gradient-orb-1 {
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(16, 185, 129, 0.3) 0%, transparent 70%);
    top: -200px;
    left: -200px;
    animation-delay: 0s;
  }

  .hero-gradient-orb-2 {
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(6, 182, 212, 0.25) 0%, transparent 70%);
    bottom: -150px;
    right: -150px;
    animation-delay: -7s;
  }

  .hero-gradient-orb-3 {
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.2) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation-delay: -14s;
  }

  @keyframes float {
    0%, 100% {
      transform: translate(0, 0) scale(1);
    }
    25% {
      transform: translate(30px, -30px) scale(1.05);
    }
    50% {
      transform: translate(-20px, 20px) scale(0.95);
    }
    75% {
      transform: translate(-30px, -20px) scale(1.02);
    }
  }

  .hero-gradient-orb-3 {
    animation-name: float-center;
  }

  @keyframes float-center {
    0%, 100% {
      transform: translate(-50%, -50%) scale(1);
    }
    25% {
      transform: translate(-45%, -55%) scale(1.1);
    }
    50% {
      transform: translate(-55%, -45%) scale(0.9);
    }
    75% {
      transform: translate(-48%, -52%) scale(1.05);
    }
  }

  /* Name Gradient */
  .hero-name-gradient {
    background: linear-gradient(135deg, #10b981 0%, #06b6d4 50%, #8b5cf6 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 5s ease-in-out infinite;
  }

  /* Stat Gradient */
  .hero-stat-gradient {
    background: linear-gradient(135deg, #f59e0b 0%, #ef4444 50%, #ec4899 100%);
    background-size: 200% 200%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 4s ease-in-out infinite;
    animation-delay: -2s;
  }

  @keyframes gradient-shift {
    0%, 100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  /* Text Reveal Animation */
  .hero-reveal {
    opacity: 0;
    transform: translateY(30px);
    animation: reveal 0.8s ease-out forwards;
  }

  .hero-reveal-1 { animation-delay: 0.1s; }
  .hero-reveal-2 { animation-delay: 0.2s; }
  .hero-reveal-3 { animation-delay: 0.3s; }
  .hero-reveal-4 { animation-delay: 0.4s; }
  .hero-reveal-5 { animation-delay: 0.5s; }
  .hero-reveal-6 { animation-delay: 0.6s; }
  .hero-reveal-7 { animation-delay: 0.7s; }
  .hero-reveal-8 { animation-delay: 0.8s; }

  @keyframes reveal {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scroll Indicator */
  .scroll-indicator {
    animation: fade-in 1s ease-out 1.2s forwards;
    opacity: 0;
  }

  @keyframes fade-in {
    to {
      opacity: 1;
    }
  }

  .scroll-dot {
    animation: scroll-bounce 2s ease-in-out infinite;
  }

  @keyframes scroll-bounce {
    0%, 100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(12px);
      opacity: 0.3;
    }
  }

  /* Reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .hero-reveal {
      animation: none;
      opacity: 1;
      transform: none;
    }

    .hero-gradient-orb,
    .hero-name-gradient,
    .hero-stat-gradient,
    .scroll-dot,
    .scroll-indicator {
      animation: none;
    }

    .scroll-indicator {
      opacity: 1;
    }
  }
</style>
